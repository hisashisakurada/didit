<div class="row">
  <div class="pull-left">
      <%= image_tag @user.image.thumb.url if @user.image? %>
  </div>
  <div class="pull-left">
    <p class="lead"><%= @user.name %></p>
    <p>Profile<%= @user.profile %></p>
    <p>Post<%= @user.posts.count %>ä»¶</p>
  </div>
  <div class="col-sm-8">
    <ul class="nav nav-tabs nav-justified mb-3">
      <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>">Posts  <span class="badge badge-secondary"><%= @count_posts %></span></a></li>
      <li class="nav-item"><a href="<%= likes_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(likes_user_path(@user)) %>">Likes <span class="badge badge-secondary"><%= @count_favposts %></span></a></li>
    </ul>
    <%= render 'posts/posts', posts: @favposts %>
  </div>
</div>